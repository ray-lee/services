<?xml version="1.0"?>
<component name="org.collectionspace.nuxeo.version.ecm.types">	
	<extension target="org.nuxeo.ecm.core.event.EventServiceComponent" point="listener">
		<listener name="createversionlistener" async="false" postCommit="false"
			class="org.collectionspace.services.nuxeo.extension.version.CreateVersionListener" priority="999">
			<event>documentCreated</event>
			<event>documentModified</event>
		</listener>
	</extension>
	<extension target="org.nuxeo.ecm.core.event.EventServiceComponent" point="listener">
		<listener name="movementupdatelistener" async="false" postCommit="false"
			class="org.collectionspace.services.nuxeo.extension.version.MovementUpdateListener" priority="999">
			<event>beforeDocumentModification</event>
		</listener>
	</extension>
</component>
